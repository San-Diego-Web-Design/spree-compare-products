<% if params[:keywords] %>
<h3><%= t(:search_results, :keywords => params[:keywords]) %></h3>
<% end %>
<ul class="product-listing">
  <% products.each do |product| %>
    <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
      <li id="product_<%= product.id %>">
        <%= link_to small_image(product), product %>
        <%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", product, :class => 'info' %>
        <%= render('shared/compare_product_field', :product => product) if defined?(compare) && compare %>
      </li>
    <% end %>
  <% end %>
</ul>
<hr class="space" />
